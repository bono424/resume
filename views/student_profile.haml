/education
#education
  %form{:method => "POST", :action => "#"}
    %input{:type => "hidden", :name => "action", :value => "education"}
    .row
      .span5
        %h2
          Education
          %a.edit-icon
            %i{:class => "icon-pencil"}
        %br/

      - if @user.school.nil? && @user.major.nil? && @user.minor.nil? && @user.class.nil? && @user.gpa.nil?
        .span5.edit{:style => "display:block;"}
          .row
            .span2.bold School
            .span3
              %input{:type => "text", :name => "school"}
          .row
            .span2.bold Major
            .span3
              %input{:type => "text", :name => "major"}
          .row
            .span2.bold Minor
            .span3
              %input{:type => "text", :name => "minor"}
          .row
            .span2.bold Class
            .span3
              %input{:type => "text", :name => "class"}
          .row
            .span2.bold GPA
            .span3
              %input{:type => "text", :name => "gpa"}

          .row{:class => "button"}
            .span5
              %button{:type => "submit", :class => "btn btn-success"} Save these changes

      - else
        .edit.span8{:style => "display:none;"}
          .row
            .span2.bold School
            .span3
              %input{:type => "text", :value => "#{@user.school}", :name => "school"}
          .row
            .span2.bold Major
            .span3
              %input{:type => "text", :value => "#{@user.major}", :name => "major"}
          .row
            .span2.bold Minor
            .span3
              %input{:type => "text", :value => "#{@user.minor}", :name => "minor"}
          .row
            .span2.bold Class
            .span3
              %input{:type => "text", :value => "#{@user.class.strftime('%Y')}", :name => "class"}
          .row
            .span2.bold GPA
            .span3
              %input{:type => "text", :value => "#{@user.gpa}", :name => "gpa"}
          .row{:class => "button"}
            .span5
              %button{:type => "submit", :class => "btn btn-success"} Save these changes

      .info.span8
        - unless @user.school.nil?
          .row
            .span2.bold School
            .span3= @user.school

        - unless @user.major.nil?
          .row
            .span2.bold Major
            .span3= @user.major

        - unless @user.minor.nil?
          .row
            .span2.bold Minor
            .span3= @user.minor

        - unless @user.class.nil?
          .row.clearfix
            .span2.bold Class year
            .span3= @user.class.strftime('%Y')

        - unless @user.gpa.nil?
          .row
            .span2.bold GPA
            .span3= @user.gpa


/ personal
%form{:action => "#", :method => "POST"}
  %input{:type => "hidden", :name => "action", :value => "personal"}
  .row
    .span5
      %h2
        Personal
        %a.edit{:href => "#", :onClick => "editSection('personal')"}
          %i{:class => "icon-pencil"}
  %br/
  #personal
    .row
      .bold.span2 Primary email
      .span4= @user.email
    - unless @user.secondary_email.nil?
      .row
        .bold.span2 Personal email
        .span4= @user.secondary_email
    - unless @user.interest1.nil? || @user.interest1 == ""
      .row
        .bold.span2 Interest one
        .span4= @user.interest1
    - unless @user.interest2.nil? || @user.interest2 == ""
      .row
        .bold.span2 Interest two
        .span4= @user.interest2
    - unless @user.interest3.nil? || @user.interest3 == ""
      .row
        .bold.span2 Interest three
        .span4= @user.interest3

  #personal-edit{:style => "display:none;"}
    .row{:style => "padding-bottom:18px;"}
      .span2.bold Primary email
      .span4= @user.email
    .row
      .span2.bold Personal email
      .span3
        %input{:type => "text", :value => "#{@user.secondary_email}", :name => "secondary_email"}
    .row
      .span2.bold Interest one
      .span3
        %select{:name => "interest1"}
          - if @user.interest1.nil? || @user.interest1 == ""
            %option{:value => "", :selected => "selected"} Select
          - else
            %option{:value => "#{@user.interest1}"}= @user.interest1
          - @interests.each do |i|
            - unless @user.interest1 == i
              %option{:value => "#{i}"}= i

    .row
      .span2.bold Interest two
      .span3
        %select{:name => "interest2"}
          - if @user.interest2.nil? || @user.interest2 == ""
            %option{:value => "", :selected => "selected"} Select
          - else
            %option{:value => "#{@user.interest2}"}= @user.interest2
          - @interests.each do |i|
            - unless @user.interest2 == i
              %option{:value => "#{i}"}= i
    .row
      .span2.bold Interest three
      .span3
        %select{:name => "interest3"}
          - if @user.interest3.nil? || @user.interest3 == ""
            %option{:value => "", :selected => "selected"} Select
          - else
            %option{:value => "#{@user.interest3}"}= @user.interest3
          - @interests.each do |i|
            - unless @user.interest3 == i
              %option{:value => "#{i}"}= i

    .row{:class => "button"}
      .span5
        %button{:type => "submit", :class => "btn btn-success"} Save these changes

%hr


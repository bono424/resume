!!!
%html{html_attrs}
  %head
    %title= @title || "MyGrad"
    = haml :_head
    %script{:type => "text/javascript", :src => "https://js.stripe.com/v1/"}
    %script{:type => "text/javascript", :src => "/js/payments.js"}

  %body
    #wrap
      .navbar.navbar-static-top
        .navbar-inner
          .container
            .row
              .span4
                %a{:href => "/"}
                  %img{:src => "/img/logo.png", :title => "TRD logo", :class => "logo"}
      .container
        .row
          #left{:class => "span3"}
            = haml :_nav_main
          #right{:class => "span9"}
            = yield
      #push
    = haml :_footer
    = haml :_contact
    = haml :_javascript
